@model IEnumerable<Lab4.Models.Movie>
@{
    Layout = "_Layout";
}

<div style="padding-bottom:9px; margin: 40px 0 20px; border-bottom: 1px solid #eee; box-sizing:border-box">
    <h2>Current Movies</h2>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover table-responsive">
            @if (Model == null || Model.Count() == 0)
            {
                <tbody>
                    <tr>
                        <td colspan="6">Currently, there are no models in the database.<br /><br /></td>
                    </tr>
                </tbody>
            }
            else
            {
                <thead>
                    <tr>
                        <th></th>
                        <th>Movie Title</th>
                        <th>Movie SubTitle</th>
                        <th>Description</th>
                        <th>Year</th>
                        <th>Rating</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a class="btn btn-sm btn-primary" asp-controller="Home" asp-action="EditMovie" asp-route-id="@item.MovieId">Edit</a></td>
                            <td>@item.Title</td>
                            <td>@item.SubTitle</td>
                            <td>@item.Description</td>
                            <td>@item.Year</td>
                            <td>@item.Rating/5</td>
                            <td><a class="btn btn-sm btn-danger" asp-controller="Home" onclick="return confirm('Are you sure?');" asp-action="DeleteMovie" asp-route-id="@item.MovieId">Delete</a></td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>
