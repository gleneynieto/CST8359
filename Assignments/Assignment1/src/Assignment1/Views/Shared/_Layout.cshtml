@model Assignment1.Models.Role
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Assignment 1</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a asp-controller="Home" class="nav-link" asp-action="Register">Register <span class="sr-only">(current)</span></a>        
                    </li>
                    <li class="nav-item active">
                        <a asp-controller="Home" class="nav-link" asp-action="Login">Login <span class="sr-only">(current)</span></a>
                    </li>
                    @if (Context.Session.GetInt32("_userId") != null && Context.Session.GetInt32("_roleId") == 2)
                        {
                            <li class="nav-item active">
                                <a asp-controller="Home" class="nav-link" asp-action="AddBlogPost">Add Blog Post<span class="sr-only">(current)</span></a>
                            </li>                    
                        }                 
                </ul>
            </div>

        </div>
    </nav>

    <div class="container" role="main">
        @{
            if (User.Identity.IsAuthenticated)
            {
                <div style="padding-bottom:9px; margin: 40px 0 20px; border-bottom: 1px solid #eee; box-sizing: border-box">
                    <h2>Welcome, @Model.Name !</h2>
                </div>
            }
        }
        <div class="row">
            @RenderBody()
        </div>       
        <br />
        <br />
        <br />
    </div>

    <footer class="container">
        <p class="text-muted">
            First Name: Peter<br />
            Last Name: Gani<br />
            Email Address: gani0006@algonquinlive.com<br />
            Student Number: 040843285
        </p>
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>