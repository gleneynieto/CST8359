@model Assignment1.Models.BlogPost
@using Microsoft.AspNetCore.Http
@{
    Layout = "_Layout";
}

<div style="padding-bottom:9px; margin: 40px 0 20px; border-bottom: 1px solid #eee; box-sizing: border-box">
    <h2>Add Blog Post</h2>
</div>

<div class="col-sm-12">
    <form method="post" asp-controller="Home" asp-action="CreateBlogPost">
        <input type="hidden" value="@Context.Session.GetInt32("_userId")" name="UserId" />
        <input type="hidden" value="@DateTime.Now" name="Posted" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" name="Title" placeholder="Title" asp-for="Title" required>
            </div>
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea class="form-control" id="content" rows="10" asp-for="Content"></textarea>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>