@model Assignment2.Models.User
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Profile";
}

<div style="padding-bottom:9px; margin: 40px 0 20px; border-bottom: 1px solid #eee; box-sizing: border-box">
    <h3>Edit Profile</h3>
</div>

<div class="col-sm-12">
    <form method="post" asp-controller="Home" asp-action="ModifyProfile">
        <input type="hidden" value="@Model.UserId" name="UserId" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstName">First Name:</label>
                <input type="text" class="form-control" id="firstName" name="FirstName" placeholder="First Name" asp-for="FirstName" value="@Model.FirstName" required>
            </div>
            <div class="form-group col-md-6">
                <label for="lastName">Last Name:</label>
                <input type="text" class="form-control" id="lastName" name="LastName" placeholder="Last Name" asp-for="LastName" value="@Model.LastName" required>
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmailAddress">Email Address:</label>
            <input type="email" class="form-control" id="inputEmailAddress" name="EmailAddress" placeholder="Email Address" asp-for="EmailAddress" value="@Model.EmailAddress" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="Password" placeholder="Password" asp-for="Password" value="@Model.Password" required>
        </div>
        <p style="">Role: <br /></p>
        <div class="form-row">
            <div class="form-check form-check-inline">
                @if (Model.RoleId == 1)
                {
                    <input class="form-check-input" type="radio" name="RoleId" id="userRadio" value="1" checked>
                }
                else
                {
                    <input class="form-check-input" type="radio" name="RoleId" id="userRadio" value="1">
                }
                <label class="form-check-label" for="userRadio">General Users</label>
            </div>
            <div class="form-check form-check-inline">
                @if (Model.RoleId == 2)
                {
                    <input class="form-check-input" type="radio" name="RoleId" id="adminRadio" value="2" checked>
                }
                else
                {
                    <input class="form-check-input" type="radio" name="RoleId" id="adminRadio" value="2">
                }
                <label class="form-check-label" for="adminRadio">Admin</label>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label for="DateOfBirth">Date of Birth</label>
            <input id="DateOfBirth" class="form-control" required name="DateOfBirth" type="datetime-local" value="@Model.DateOfBirth.Year/@Model.DateOfBirth.Month/@Model.DateOfBirth.Day" asp-for="DateOfBirth" />
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address" name="Address" placeholder="Address" value="@Model.Address" asp-for="Address" required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="City">City:</label>
                <input type="text" class="form-control" id="City" name="City" placeholder="City" value="@Model.City" asp-for="City" required>
            </div>
            <div class="form-group col-md-4">
                <label for="Country">Country:</label>
                <input type="text" class="form-control" id="Country" name="Country" placeholder="Country" value="@Model.Country" asp-for="Country" required>
            </div>
            <div class="form-group col-md-4">
                <label for="PostalCode">Postal Code:</label>
                <input type="text" class="form-control" id="PostalCode" name="PostalCode" placeholder="Postal Code" value="@Model.PostalCode" asp-for="PostalCode" required>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Edit Profile</button>
    </form>



</div>