@model Assignment2.Models.User
@{
    Layout = "_Layout";
    ViewData["Title"] = "User Registration";
}

<div style="padding-bottom:9px; margin: 40px 0 20px; border-bottom: 1px solid #eee; box-sizing: border-box">
    <h3>User Registration</h3>
</div>

<div class="col-sm-12">
    <form method="post" asp-controller="Home" asp-action="RegisterUser">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstName">First Name:</label>
                <input type="text" class="form-control" id="firstName" name="FirstName" placeholder="First Name" asp-for="FirstName" required>
            </div>
            <div class="form-group col-md-6">
                <label for="lastName">Last Name:</label>
                <input type="text" class="form-control" id="lastName" name="LastName" placeholder="Last Name" asp-for="LastName" required>
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmailAddress">Email Address:</label>
            <input type="email" class="form-control" id="inputEmailAddress" name="EmailAddress" placeholder="Email Address" asp-for="EmailAddress" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="Password" placeholder="Password" asp-for="Password" required>
        </div>
        <p style="">Role: <br /></p>
        <div class="form-row">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="RoleId" id="userRadio" value="1">
                <label class="form-check-label" for="userRadio">General Users</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="RoleId" id="adminRadio" value="2">
                <label class="form-check-label" for="adminRadio">Admin</label>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label for="DateOfBirth">Date of Birth</label>
            <input id="DateOfBirth" class="form-control" required name="DateOfBirth" type="datetime-local" placeholder="YYYY/MM/DD" asp-for="DateOfBirth" />
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address" name="Address" placeholder="Address" asp-for="Address" required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="City">City:</label>
                <input type="text" class="form-control" id="City" name="City" placeholder="City" asp-for="City" required>
            </div>
            <div class="form-group col-md-4">
                <label for="Country">Country:</label>
                <input type="text" class="form-control" id="Country" name="Country" placeholder="Country" asp-for="Country" required>
            </div>
            <div class="form-group col-md-4">
                <label for="PostalCode">Postal Code:</label>
                <input type="text" class="form-control" id="PostalCode" name="PostalCode" placeholder="Postal Code" asp-for="PostalCode" required>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>